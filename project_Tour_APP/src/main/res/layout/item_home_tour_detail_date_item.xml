<?xml version="1.0" encoding="utf-8"?>
<com.highnes.tour.view.layout.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:funy="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:background="@drawable/v_click_null"
    android:focusable="false"
    android:orientation="vertical" >

    <com.highnes.tour.view.layout.RippleView
        android:id="@+id/rv_root"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        ripple:rv_type="rectangle" >

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_date"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电子导游"
                android:textColor="@color/font_black_normal"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="￥666"
                android:textColor="@color/font_black_normal"
                android:textSize="14sp" />
        </LinearLayout>
    </com.highnes.tour.view.layout.RippleView>

</com.highnes.tour.view.layout.SquareLayout>