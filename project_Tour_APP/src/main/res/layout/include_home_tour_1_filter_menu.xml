<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_menu_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_menu_0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_menu_up"
                android:gravity="center_vertical"
                android:text="附近"
                android:textColor="@color/titlec"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_menu_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_menu_down"
                android:gravity="center_vertical"
                android:text="智能排序"
                android:textColor="@color/font_black_8a8a8a"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_menu_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_menu_2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_menu_down"
                android:gravity="center_vertical"
                android:text="筛选"
                android:textColor="@color/font_black_8a8a8a"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>