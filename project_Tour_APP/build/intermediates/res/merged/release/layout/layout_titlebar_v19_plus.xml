<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_v19"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height_v19"
    android:background="@color/titlec"
    android:paddingTop="@dimen/title_height_padding_v19" >

    <!-- 单个标题 -->

    <TextView
        android:id="@+id/text_title19"
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:visibility="gone" />
    <!-- 单个标题+图标 -->

    <TextView
        android:id="@+id/text_title_img19"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_down_white"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:visibility="gone" />
    <!-- 搜索框 -->

    <LinearLayout
        android:id="@+id/ll_search19"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_radius_search_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="门票/目的地/景点"
            android:textColor="@color/font_black_8a8a8a"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 搜索框 -->

    <LinearLayout
        android:id="@+id/ll_search2_19"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_radius_search_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="门票/目的地/景点"
            android:textColor="@color/font_black_8a8a8a"
            android:textSize="14sp" />
    </LinearLayout>
    <!-- 搜索框 -->

    <LinearLayout
        android:id="@+id/ll_search3_19"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_radius_search_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/et_search19"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:focusable="true"
            android:hint="门票/目的地/景点"
            android:textColor="@color/font_black_normal"
            android:textSize="14sp" />
    </LinearLayout>
    <!-- 返回 -->

    <LinearLayout
        android:id="@+id/ll_title_back19"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <!-- 左上角图标 -->

        <ImageView
            android:id="@+id/button_backward_img19"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_title_finish"
            android:visibility="gone" />

        <!-- 左上角文字 -->

        <TextView
            android:id="@+id/button_backward_txt19"
            style="@style/Text.Title_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="重庆"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_down_img19"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_down_white"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 前进 -->

    <LinearLayout
        android:id="@+id/ll_title_forward19"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <!-- 右上角图标 -->

        <ImageView
            android:id="@+id/button_forward_img19"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <!-- 右上角文字 -->

        <TextView
            android:id="@+id/button_forward_txt19"
            style="@style/Text.Title_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="菜单"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_down_img_right19"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_msg_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_dot_right19"
            android:layout_width="8dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_dot_red"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>